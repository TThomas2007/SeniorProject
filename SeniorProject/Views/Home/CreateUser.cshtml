@model TestWebApplication.Models.UserModel

@{
    ViewBag.Title = "Create your account";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body>
    @using (Html.BeginForm("CreateUser", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="3">
                    Registration
                </th>
            </tr>
            <tr>
                <td>
                    Username
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserLogin.Username)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.UserLogin.Username, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    @Html.PasswordFor(m => m.UserLogin.Password)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.UserLogin.Password, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Confirm Password
                </td>
                <td>
                    @Html.PasswordFor(m => m.confirmPassword)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.UserLogin.Email, "Email")
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserLogin.Email)
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.UserLogin.Email, "", new { @class = "error" })
                </td>
            </tr>
            
        </table>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
</html>